<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_picture_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:contentDescription="@string/picture"
        android:src="@drawable/sample"
        android:transitionName="@string/list_detail_transition" />

    <ImageView
        android:id="@+id/img_info"
        style="@style/IconsStyle"
        android:layout_margin="@dimen/margin_24"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/picture_info"
        android:src="@drawable/ic_baseline_info_24"
        app:layout_constraintEnd_toEndOf="@id/img_picture_detail"
        app:layout_constraintTop_toTopOf="@id/img_picture_detail" />

</androidx.constraintlayout.widget.ConstraintLayout>